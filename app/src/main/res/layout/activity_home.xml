<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f0f0"> <!-- Background color for the whole layout -->

    <!-- Header TextView -->

    <!-- Buttons container -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBC2C2"
        android:padding="16dp"
        android:text="Welcome to \n HD DRY CLEANERS"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="344dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        tools:ignore="RtlSymmetry">

        <Button
            android:id="@+id/put_order_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="40dp"
            android:background="#acacac"
            android:drawablePadding="10dp"
            android:padding="16dp"
            android:text="Put Order"
            android:textColor="#D7F0F1"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/search_order_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="40dp"
            android:background="#4CAF50"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:text="Search Order"
            android:textColor="#D0E4ED"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/order_history_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="16dp"
            android:background="#2196F3"
            android:drawablePadding="8dp"
            android:padding="16dp"
            android:text="History"
            android:textColor="#F1E4E4"
            tools:ignore="TextContrastCheck" />

    </LinearLayout>
</RelativeLayout>
